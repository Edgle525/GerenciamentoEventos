<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ParticipantHistoryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_participant_history"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvParticipantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Nome do Participante" />

        <TextView
            android:id="@+id/tvParticipantEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="email@exemplo.com" />

        <TextView
            android:id="@+id/tvParticipantCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="123.456.789-00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HistÃ³rico de Eventos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <ListView
            android:id="@+id/listViewParticipantHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
