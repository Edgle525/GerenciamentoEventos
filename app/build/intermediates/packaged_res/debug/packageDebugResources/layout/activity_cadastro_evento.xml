<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.CadastroEventoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_cadastro_evento"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cadastrar Novo Evento"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <EditText
                android:id="@+id/edtNomeEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do Evento"/>

            <EditText
                android:id="@+id/edtDataEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data de Início (DD/MM/AAAA)"
                android:inputType="date"/>

            <EditText
                android:id="@+id/edtHorarioEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Horário de Início (HH:MM)"
                android:inputType="time"/>

            <EditText
                android:id="@+id/edtDataTerminoEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data de Término (DD/MM/AAAA)"
                android:inputType="date"/>

            <EditText
                android:id="@+id/edtHorarioTerminoEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Horário de Término (HH:MM)"
                android:inputType="time"/>

            <EditText
                android:id="@+id/edtLocalEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Local do Evento"/>

            <EditText
                android:id="@+id/edtDescricaoEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descrição do Evento"
                android:inputType="textMultiLine"
                android:minLines="3"/>

            <EditText
                android:id="@+id/edtTempoMinimoPermanencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tempo Mínimo de Permanência (minutos)"
                android:inputType="number"/>

            <CheckBox
                android:id="@+id/cbTempoTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempo de permanência total" />

            <TextView
                android:id="@+id/tvCursosPermitidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cursos Permitidos: Todos"
                android:padding="12dp"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnCadastrarEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastrar Evento"
                android:layout_marginTop="24dp"/>

            <Button
                android:id="@+id/btnGerarQRCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gerar QR Codes"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
