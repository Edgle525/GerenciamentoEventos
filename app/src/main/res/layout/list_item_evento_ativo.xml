<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.App.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvNomeEventoAtivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Evento"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/tvDataEventoAtivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data: DD/MM/AAAA"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/tvLocalEventoAtivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local: A Definir"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="?android:attr/textColorSecondary" />

        <!-- Detalhes do Evento (Inicialmente Oculto) -->
        <LinearLayout
            android:id="@+id/layout_detalhes_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvHorarioEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horário: HH:MM"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvDescricaoEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição detalhada do evento..."
                android:layout_marginTop="8dp"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/btnInscrever"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inscrever-se"
                android:backgroundTint="@color/accent"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
