        android:src="@mipmap/ic_launcher_round" 
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/nav_header_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
